@model Category


<form method="post" asp-action="DeletePOST">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">DELETE PROFILE</h2>
            <hr />
            <h1 class="text-primary">Only Admin Have Access to Delete Profile</h1>
            @if (User.IsInRole("Admin"))
            {
                <div class="mb-2">
                    <label asp-for="FullName"></label>
                    <input asp-for="FullName" disabled class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="Address"></label>
                    <input asp-for="Address" disabled class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" disabled class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="Occupation"></label>
                    <input asp-for="Occupation" disabled class="form-control" />
                    <span asp-validation-for="Occupation" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="gender">Gender:</label>
                    <select class="form-control" disabled id="gender" asp-for="Gender">
                        <option value="">-- Select Gender --</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <br />
                <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
                <a asp-controller="Category" asp-action="Form" class="btn btn-secondary" style="width:150px">
                    Back to List
                </a>
            }
                
        </div>
        <hr />
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
